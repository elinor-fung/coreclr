<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <CLRTestKind>BuildOnly</CLRTestKind>
    <AssemblyName Condition="'$(AssemblyNameSuffix)'!=''">$(AssemblyName)_$(AssemblyNameSuffix)</AssemblyName>
    <CleanFile>$(AssemblyName).FileListAbsolute.txt</CleanFile>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="AssemblyToLoad.cs" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="AssemblyToLoadDependency.csproj" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Resource.resx" />
  </ItemGroup>

  <Target Name="_UpdateResourceCulture" AfterTargets="SplitResourcesByCulture" Condition="'$(ResourceCulture)'!=''">
    <ItemGroup>
      <EmbeddedResource Update="Resource.resx">
        <Culture>$(ResourceCulture)</Culture>
        <WithCulture>true</WithCulture>
      </EmbeddedResource>
    </ItemGroup>
  </Target>
</Project>
